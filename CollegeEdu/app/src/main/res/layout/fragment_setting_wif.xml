<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weds.settings.ui.SettingWifFragment">

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_wifi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:dividerHeight="1dp"
        android:divider="@color/B8"
        android:minHeight="200dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="@dimen/setting_save_button_width"
            android:layout_height="@dimen/setting_save_button_height"
            android:text="保存"
            android:textSize="@dimen/ll_size"
            android:textColor="@color/W1"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/setting_bottom_button_back"
            />

    </RelativeLayout>

</LinearLayout>
