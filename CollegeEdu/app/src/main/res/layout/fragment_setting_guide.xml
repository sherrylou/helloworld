<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weds.settings.ui.SettingGuideFragment">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scrollbars="none"
            >

            <LinearLayout
                android:id="@+id/ll_setting_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                />

        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            >

            <LinearLayout
                android:id="@+id/ll_tir_contain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            >

            <TextView
                android:id="@+id/tv_bottom"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:textSize="@dimen/ll_size"
                android:text=""
                android:textColor="@color/W1"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/setting_bottom_button_back"
                />

            <TextView
                android:id="@+id/tv_prior_button"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:textSize="@dimen/ll_size"
                android:text="上一步"
                android:textColor="@color/W1"
                android:gravity="center"
                android:layout_toLeftOf="@+id/tv_bottom"
                android:layout_marginRight="48dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:background="@drawable/setting_bottom_button_back"
                android:visibility="gone"
                />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_guide_finish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="配置完成"
        android:textColor="@color/B8"
        android:textSize="@dimen/setting_xxx_size"
        android:gravity="center"
        android:visibility="gone"
        />

</RelativeLayout>
