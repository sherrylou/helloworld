<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@mipmap/main_back_blue"
    tools:context="com.weds.collegeedu.ui.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:paddingTop="30dp"
        android:paddingBottom="45dp"
        >
        
        <FrameLayout
            android:id="@+id/fl_class_info"
            android:layout_width="900dp"
            android:layout_height="245dp"
            />

        <FrameLayout
            android:id="@+id/fl_multi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <FrameLayout
            android:id="@+id/fl_day_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/main_bottom"
            />

        <FrameLayout
            android:id="@+id/fl_notification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginBottom="@dimen/main_right_bottom"
            android:layout_marginEnd="@dimen/main_notice_right"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/rl_sub_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:layout_marginBottom="@dimen/main_padding"
            android:layout_marginEnd="@dimen/main_notice_right"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/home_sub_title_size"
                    android:textColor="@color/black"
                    android:text="课程安排"
                    android:gravity="center"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="24dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.CardView
                        android:id="@+id/fl_table_info"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        />

                    <android.support.v7.widget.CardView
                        android:id="@+id/fl_attendance_info"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/transparent"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
