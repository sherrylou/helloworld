<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:context="com.weds.collegeedu.ui.fragment.HomeDayInfoFragment">

    <!--时间-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingStart="10dp">

        <!--<TextView-->
        <!--android:id="@+id/tv_hour"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text=""-->
        <!--android:textColor="@color/W1"-->
        <!--android:textSize="@dimen/day_time_size" />-->

        <!--<TextView-->
        <!--android:id="@+id/tv_colon"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text=":"-->
        <!--android:textColor="@color/W1"-->
        <!--android:textSize="@dimen/day_time_size"-->
        <!--android:gravity="center"-->
        <!--/>-->

        <!--<TextView-->
        <!--android:id="@+id/tv_sec"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text=""-->
        <!--android:textColor="@color/W1"-->
        <!--android:textSize="@dimen/day_time_size" />-->

        <TextClock
            android:id="@+id/time_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format24Hour="kk:mm"
            android:textColor="@color/black"
            android:textSize="50sp" />

    </LinearLayout>

    <!--日期等信息-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/day_normal_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/day_small_top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/day_small_end"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/day_normal_size" />

            <TextView
                android:id="@+id/tv_teach_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/day_small_end"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/day_normal_size" />

            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/day_small_end"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/day_normal_size" />

            <TextView
                android:id="@+id/tv_weather_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/day_small_end"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/day_normal_size" />

            <ImageView
                android:id="@+id/iv_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:tint="@color/C1" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp">

        <ImageView
            android:id="@+id/iv_net_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/sys_wire_link" />

        <ImageView
            android:id="@+id/iv_yellow_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/yellow_line"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>
