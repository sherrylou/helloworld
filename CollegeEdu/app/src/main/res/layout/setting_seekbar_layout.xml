<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/tv_seekbar_num"
        android:layout_width="@dimen/setting_tv_seekbar_num"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/ll_size"
        android:textColor="@color/C1"
        android:layout_marginRight="80dp"
        android:gravity="center"
        />

    <SeekBar
        android:id="@+id/sk_progress"
        android:layout_width="@dimen/setting_seekbar_width"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:maxHeight="4dp"
        android:minHeight="@dimen/setting_seekbar_height"
        android:progressDrawable="@drawable/seekbar_blue_back"
        />
    
</LinearLayout>