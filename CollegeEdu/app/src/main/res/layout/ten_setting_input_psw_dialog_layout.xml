<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/W1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        >

        <LinearLayout
            android:id="@+id/ll_et_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="83dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入密码"
                android:textColor="@color/C1"
                android:textSize="@dimen/size_18"
                android:layout_marginStart="48dp"
                />

            <EditText
                android:id="@+id/et_psw"
                android:inputType="textPassword"
                android:layout_width="260dp"
                android:layout_height="52dp"
                android:layout_marginStart="38dp"
                android:background="@drawable/gray_frame_bg"
                />
            
        </LinearLayout>

        <TextView
            android:id="@+id/tv_error_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_et_psw"
            android:layout_marginTop="14dp"
            android:text="密码输入错误，请重试!"
            android:textColor="@color/R4"
            android:textSize="@dimen/size_16"
            android:visibility="invisible"
            android:layout_marginStart="176dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_error_psw"
            android:layout_marginTop="13dp"
            android:layout_marginStart="176dp"
            >

            <TextView
                android:id="@+id/tv_enter"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="确定"
                android:textColor="@color/W1"
                android:textSize="@dimen/size_20"
                android:gravity="center"
                android:background="@color/color_blue_3a90ff"
                android:layout_marginEnd="25dp"
                />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="取消"
                android:textColor="@color/W1"
                android:textSize="@dimen/size_20"
                android:gravity="center"
                android:background="@color/color_blue_3a90ff"
                android:layout_marginEnd="25dp"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/G7"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备ID: "
                android:textSize="@dimen/size_16"
                />

            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_device_state"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:textSize="@dimen/size_16"
            />

    </RelativeLayout>

</LinearLayout>