<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="@dimen/slolt_dialog_width"
        android:layout_height="@dimen/slolt_dialog_height"
        android:background="@mipmap/prompt"
        >

        <LinearLayout
            android:id="@+id/ll_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您确定要"
                android:textSize="@dimen/title_size"
                android:textColor="@color/C1"
                />

            <TextView
                android:id="@+id/tv_motion_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/title_size"
                android:textColor="@color/C1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吗?"
                android:textSize="@dimen/title_size"
                android:textColor="@color/C1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/setting_ask_dialog_bottom"
            >

            <TextView
                android:id="@+id/tv_enter"
                android:layout_width="@dimen/setting_ask_dialog_button_width"
                android:layout_height="@dimen/setting_ask_dialog_button_height"
                android:text="确定"
                android:textSize="@dimen/l_size"
                android:textColor="@color/W1"
                android:background="@drawable/setting_set_button_back"
                android:gravity="center"
                android:layout_marginEnd="150dp"
                />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/setting_ask_dialog_button_width"
                android:layout_height="@dimen/setting_ask_dialog_button_height"
                android:text="取消"
                android:textSize="@dimen/l_size"
                android:textColor="@color/W1"
                android:background="@drawable/setting_set_button_back"
                android:gravity="center"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>