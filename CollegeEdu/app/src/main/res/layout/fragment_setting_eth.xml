<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weds.settings.ui.SettingWifFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用以太网"
                        android:textSize="@dimen/l_size"
                        android:textColor="@color/C1"
                        />

                    <TextView
                        android:id="@+id/tv_is_use_eth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已使用"
                        android:textSize="@dimen/ll_size"
                        android:textColor="@color/G1"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_eth_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="以太网设备"
                    android:textSize="@dimen/ll_size"
                    android:textColor="@color/B8"
                    android:layout_marginStart="15dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/B8"
                    />

                <LinearLayout
                    android:id="@+id/ll_sel_ip_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="20dp"
                    >

                    <CheckBox
                        android:id="@+id/cb_sel_ip_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ll_size"
                        android:textColor="@color/C1"
                        android:text="动态加载"
                        android:layout_marginStart="20dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_eth_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="以太网配置"
                    android:textSize="@dimen/ll_size"
                    android:textColor="@color/B8"
                    android:layout_marginStart="15dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/B8"
                    />

                <LinearLayout
                    android:id="@+id/ll_ip_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_marginStart="40dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ip地址"
                        android:textSize="@dimen/l_size"
                        android:textColor="@color/C1"
                        />

                    <EditText
                        android:id="@+id/et_ip_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ll_size"
                        android:textColor="@color/G1"
                        android:layout_marginTop="10dp"
                        android:hint="请输入ip地址"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/B2"
                    android:layout_marginTop="10dp"
                    />

                <LinearLayout
                    android:id="@+id/ll_subnet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_marginStart="40dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="子网掩码"
                        android:textSize="@dimen/l_size"
                        android:textColor="@color/C1"
                        />

                    <EditText
                        android:id="@+id/et_subnet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ll_size"
                        android:textColor="@color/G1"
                        android:layout_marginTop="10dp"
                        android:hint="请输入子网掩码"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/B2"
                    android:layout_marginTop="10dp"
                    />

                <LinearLayout
                    android:id="@+id/ll_gateway"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_marginStart="40dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="默认网关"
                        android:textSize="@dimen/l_size"
                        android:textColor="@color/C1"
                        />

                    <EditText
                        android:id="@+id/et_gateway"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ll_size"
                        android:textColor="@color/G1"
                        android:layout_marginTop="10dp"
                        android:hint="请输入子网掩码"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/B2"
                    android:layout_marginTop="10dp"
                    />

                <!--<LinearLayout-->
                    <!--android:id="@+id/ll_dns"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:orientation="vertical"-->
                    <!--android:layout_marginStart="40dp"-->
                    <!--&gt;-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="DNS服务器"-->
                        <!--android:textSize="@dimen/l_size"-->
                        <!--android:textColor="@color/C1"-->
                        <!--/>-->

                    <!--<EditText-->
                        <!--android:id="@+id/et_dns"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textSize="@dimen/ll_size"-->
                        <!--android:textColor="@color/G1"-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:hint="请输入DNS服务器"-->
                        <!--/>-->

                <!--</LinearLayout>-->


                <LinearLayout
                    android:id="@+id/ll_mac_addr_read"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_marginStart="40dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物理地址"
                        android:textSize="@dimen/l_size"
                        android:textColor="@color/C1"
                        />

                    <TextView
                        android:id="@+id/tv_mac_addr_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/ll_size"
                        android:textColor="@color/G1"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/B2"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="@dimen/setting_save_button_width"
            android:layout_height="@dimen/setting_save_button_height"
            android:text="保存"
            android:textSize="@dimen/l_size"
            android:textColor="@color/W1"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/setting_bottom_button_back"
            />

    </RelativeLayout>

</LinearLayout>
