<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/title_bottom"
        android:paddingLeft="@dimen/title_left"
        android:paddingRight="@dimen/title_right"
        android:paddingTop="@dimen/title_top"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/title_right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="班级信息"
            android:textColor="@color/W1"
            android:textSize="@dimen/title_size"
            android:layout_marginRight="21dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_right_rec"
            android:layout_width="@dimen/title_left_button_width"
            android:layout_height="@dimen/title_left_button_height"
            android:background="@color/Y5"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

</RelativeLayout>