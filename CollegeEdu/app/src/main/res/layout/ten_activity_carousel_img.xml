<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_carousel_img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base_back_blue"
    android:orientation="vertical"
    tools:context="com.weds.tenedu.ui.CarouselImgActivity">

    <include
        layout="@layout/ten_title_layout"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_15"
            android:layout_weight="1"
            android:background="@drawable/rectangle_notification_bg"
            android:orientation="vertical"
            android:padding="@dimen/dimen_2">

            <ImageView
                android:id="@+id/content_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_15"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/album_list_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
