<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_switch_view_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:id="@+id/ll_set_valid_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置等待"
            android:textSize="@dimen/l_size"
            android:textColor="@color/C1"
            android:layout_marginEnd="17dp"
            />

        <EditText
            android:id="@+id/et_wait_time"
            android:layout_width="134dp"
            android:layout_height="55dp"
            android:padding="10dp"
            android:inputType="number"
            android:text=""
            android:maxLength="2"
            android:drawableRight="@mipmap/hint"
            android:gravity="center"
            android:textSize="@dimen/l_size"
            android:textColor="@color/C1"
            android:background="@drawable/gray_frame_bg"
            android:layout_marginEnd="17dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒之后开始有效"
            android:textSize="@dimen/l_size"
            android:textColor="@color/C1"
            android:layout_marginEnd="17dp"
            />

    </LinearLayout>

</LinearLayout>