<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:id="@+id/ll_root"
    >

    <ImageView
        android:id="@+id/iv_wifi_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/wifi_4"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="30dp"
        >

        <TextView
            android:id="@+id/tv_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/B8"
            android:textSize="@dimen/l_size"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="由"
                android:textColor="@color/C1"
                android:textSize="@dimen/min_size"
                />

            <TextView
                android:id="@+id/tv_safe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WPA"
                android:textColor="@color/C1"
                android:textSize="@dimen/min_size"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加密"
                android:textColor="@color/C1"
                android:textSize="@dimen/min_size"
                />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_isConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已连接"
        android:textColor="@color/G2"
        android:textSize="@dimen/l_size"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/iv_rotate_loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/rotate_loading"
        android:layout_marginStart="30dp"
        android:visibility="invisible"
        />

</LinearLayout>